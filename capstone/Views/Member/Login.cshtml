@{
    ViewData["Title"] = "로그인";
}
@model MemberLogin

<body class="text-center">

    <!--  html 전체 영역을 지정하는 container -->
    <div id="container">
        @*login 폼 영역을 : loginBox*@
        <div id="loginBox">
            @*로그인 기능을 위한 asp구문*@
            <form asp-action="LoginProc" asp-controller="Member">
                <!-- 로그인 페이지 타이틀 -->
                <div id="loginBoxTitle"><h5>로그인 해 주세요.</h5></div><br />
                <!-- 아이디, 비번, 버튼 박스 -->
                <div id="inputBox">
                    @*아이디 입력 창*@
                    <div class="input-form-box">
                        <span asp-validation-for="userid">아이디</span>
                            <input type="text" asp-for="userid" class="form-control" />
                    </div>
                    @*비밀번호 입력 창*@
                    <div class="input-form-box">
                        <span asp-validation-for="userpw">비밀번호 </span>
                        <input type="password" asp-for="userpw" class="form-control" />
                    </div>
                    <div>
                        <br />
                        <button type="submit" class="btn btn-primary">로그인</button> 
                        &nbsp;
                        <button type="button" onclick="window.location.href='/Member/Registor';" class="btn btn-primary">회원가입</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
