@{
    ViewData["Title"] = "컴퓨터 쇼핑몰";
}
<script>


</script>
<style>
    /*테이블의 회색 border 스타일*/
    thead {
        border: 1px solid skyblue;
    }
    th{
        padding: 10px;
    }
    /*div 내 요소들을 정렬하기 위한 컨테이너 스타일*/
    #relative_div {
        position: relative;
    }

    /*div 내 요소들을 하단으로 보내기 위한 스타일*/
    #bottom_div {
        position: absolute;
        bottom: 0px;
    }
</style>
<div class="container">



    @foreach (var product in ViewBag.productInfo)
    {
        if (product.mainboardFormfactor != null)
        {
            <table>
                <thead>
                    <tr>
                        <th>
                            <div class="row">
                                    <div class="col">
                                        <div>
                                            <img src="@product.productImage" style="width:350px; height:350px" />
                                        </div>
                                        <div style="text-align:center; margin-right: 20px;">    리뷰수: <span style="font-size:20px">100</span>구매수: <span style="font-size:20px">100</span></div>
                                    </div>
                                    <div style="height:100%;" class="col">
                                        @*상품 이미지 우측의 정보들*@
                                        <div>
                                            <h2>@product.productName</h2>
                                        </div>
                                        <div style="text-align: right;">
                                            상품가: <strong>@string.Format("{0:#,0}", @product.productPrice)원</strong>
                                        </div>

                                        <hr>
                                        <div style="margin:15px; border: 1px solid gray;">
                                        <!-- Truck Icon -->
                                        <div class="row">
                                            <div class="col-3" style="display: flex; align-items: center;">
                                                <i class="bi bi-truck" style="font-size: 100%; line-height: 100%;"></i>
                                            </div>
                                            <div class="col">
                                                <div class="row">
                                                    <span>금일 오후 5시 이전 주문시</span>
                                                </div>
                                                <div class="row">
                                                    <span>당일출고!</span>
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                        <span style="display: flex; justify-content: center;">
                                            <button class="btn btn-primary" style="font-size: 16px; width:45%; margin-right: 10px;">
                                            <!-- Wallet Icon -->
                                            <i class="bi bi-wallet2"></i>
                                                구매하기
                                            </button>
                                            <button class="btn btn-outline-primary" style="font-size: 16px; width:45%">
                                            <!-- Cart Icon -->
                                            <i class="bi bi-cart"></i>장바구니
                                            </button>
                                        </span>
                                    </div>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody> @*상세페이지 바디부분*@
                    <tr>
                        <td>
                            <div class="row">
                                <div class="col">
                                    <div class="row">
                                        <div class="col">
                                            제조사: @product.productManufacturer
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            폼펙터: @product.mainboardFormfactor
                                        </div>
                                        <div class="col">
                                            CPU소켓: @product.mainboardCpuSocket
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            폼펙터: @product.mainboardFormfactor
                                        </div>
                                        <div class="col">
                                            Ram소켓: @product.mainboardRamSocket
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            칩셋: @product.mainboardChipset
                                        </div>
                                        <div class="col">
                                            메모리 슬롯: @product.mainboardMemorySlots
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @Html.Raw(product.productDescriptionHtml)
                        </td>
                    </tr>
                </tbody>
            </table>
            }
        }
</div>